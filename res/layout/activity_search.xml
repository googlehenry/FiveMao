<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:focusable="true" 
    android:orientation="vertical"
	android:focusableInTouchMode="true"
    tools:context=".SearchActivity" >
    
	<TextView 
	    android:id="@+id/meSearchVideosLoadingHint"
	    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:background="#2197db"
    android:textSize="18sp"
    android:paddingLeft="20dp"
    android:textColor="#ffffff"
    android:text="搜索电影中..."
	    />

    <com.ex.fivemao.ui.SearchEditText
        android:id="@+id/searchEdittext"
        style="@style/editTextStyle"
        android:layout_marginTop="5dp" />
	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    >
    <TextView 
        android:id="@+id/searchHis1"
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
    	android:layout_height="30dp"
    	android:background="#aaa"
    	android:textColor="#fff"
    	android:textSize="14sp"
    	android:visibility="gone"
    	android:clickable="true"
    	android:text="测试"
        />
    <TextView 
        android:id="@+id/searchHis2"
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:layout_marginRight="5dp"
    	android:layout_height="30dp"
    	android:background="#aaa"
    	android:textColor="#fff"
    	android:textSize="14sp"
    	android:visibility="gone"
    	android:clickable="true"
    	android:text="测试"
        />
    <TextView 
        android:id="@+id/searchHis3"
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:layout_marginRight="5dp"
    	android:layout_height="30dp"
    	android:background="#aaa"
    	android:textColor="#fff"
    	android:textSize="14sp"
    	android:visibility="gone"
    	android:clickable="true"
    	android:text="测试"
        />
    <TextView 
        android:id="@+id/searchHis4"
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:layout_marginRight="5dp"
    	android:layout_height="30dp"
    	android:background="#aaa"
    	android:textColor="#fff"
    	android:textSize="14sp"
    	android:visibility="gone"
    	android:clickable="true"
    	android:text="测试"
        />
    <TextView 
        android:id="@+id/searchHis5"
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:layout_marginRight="5dp"
    	android:layout_height="30dp"
    	android:background="#aaa"
    	android:textColor="#fff"
    	android:textSize="14sp"
    	android:visibility="gone"
    	android:clickable="true"
    	android:text="测试"
        />
	
    </LinearLayout>
	
	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
       <ListView
        android:id="@+id/meSearchVideos"
        android:divider="#3aadfd"
        android:dividerHeight="1.0px"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"  
        />
       
   </LinearLayout>


</LinearLayout>