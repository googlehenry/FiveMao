<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >
       
    <View  
        android:layout_width="match_parent"  
        android:layout_height="1.0px"
        android:layout_marginTop="5dp"
      android:layout_marginLeft="1.0px"
      android:layout_marginRight="1.0px"
        android:background="#3aadfd"
        />  
        
        <TextView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"  
		    android:layout_marginLeft="5dp"
		    android:textSize="20sp"
		    android:textStyle="bold" 
		    android:gravity="center"
		    android:text="【五毛影视】扫码下载"
		    android:layout_marginTop="10dp"
		    />
        <ImageView 
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"  
		    android:src="@drawable/fivemaoappdownload"
            />
        <TextView
            android:id="@+id/recExtraText"  
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"  
		    android:layout_marginLeft="5dp"
		    android:textSize="18sp"
		   	android:gravity="center"
		    android:text="推荐人:XXX"
		    android:layout_marginBottom="10dp"
		    />
        <View  
        android:layout_width="match_parent"  
        android:layout_height="1.0px"
      android:layout_marginLeft="1.0px"
      android:layout_marginRight="1.0px"
        android:background="#3aadfd"
        />  
        
    <LinearLayout 
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    android:orientation="horizontal">
		    <Button  
		        android:id="@+id/saveAsImageAndShare"  
		        android:layout_width="match_parent"  
		        android:layout_height="wrap_content" 
		        android:layout_margin="20dp"
		        android:padding="5dp"
		        android:background="@drawable/bt_round_shape"
		        android:textColor="#fff"
		        android:text="屏幕截图保存分享"
		        android:textSize="16sp" />  
	</LinearLayout>	
	
</LinearLayout>