<LinearLayout 
    android:id="@+id/tv_dialog_container" 
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="160dp"  
    android:background="#eee"
    android:orientation="vertical">  
    <LinearLayout  
        android:layout_width="280dp"  
        android:layout_height="40dp"  
        android:orientation="horizontal">  
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:src="@android:drawable/ic_dialog_info" 
            />
	   <TextView  
	        android:id="@+id/tv_dialog_make_sure_title"  
	        android:layout_width="250dp"  
	        android:layout_height="30dp"  
	        android:gravity="center"  
	        android:padding="0dp"
	        android:paddingTop="5dp"
	        android:textColor="#0d8af5"
	        android:text="提示信息"  
	        android:textSize="20sp"
	         />  
	   <Button  
	        android:id="@+id/btn_dialog_X"  
	        android:layout_width="30dp"  
	        android:layout_height="30dp"  
	        android:layout_margin="0dp"
	        android:padding="0dp"
	        android:background="#eee"
	        android:textSize="20sp"
	        android:text="X"  
	         />  
  	</LinearLayout>
    <View  
        android:id="@+id/dividertitle"  
        android:layout_width="match_parent"  
        android:layout_height="1dp"  
        android:background="#1111ff"
        />  
    <TextView  
        android:id="@+id/tv_dialog_make_sure_content"  
        android:layout_width="280dp"  
        android:layout_height="120dp"  
        android:padding="10dp"
        android:gravity="center"  
        android:textIsSelectable="true"  
		android:focusable="true"  
		android:longClickable="true" 
        android:text="您确定要删除此地址吗？"  
        android:textSize="16sp"
         />  
  
    <View  
        android:id="@+id/divider3"  
        android:layout_width="match_parent"  
        android:layout_height="1dp"  
        android:background="#0d8af5"
        />  
  
    <LinearLayout  
        android:layout_width="280dp"  
        android:layout_height="40dp"  
        android:orientation="horizontal">  
  
        <TextView  
            android:id="@+id/tv_sure"  
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1"  
            android:gravity="center"  
            android:textSize="18sp"
            android:text="确定"  
            
            />  
  
        <View  
            android:id="@+id/tv_sure_divider"  
            android:layout_width="1dp"  
            android:layout_height="match_parent"  
            android:background="#0d8af5"
            />  
  
        <TextView  
            android:id="@+id/tv_cancel"  
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1"  
            android:gravity="center"  
            android:textSize="18sp"
            android:text="取消"  
            />  
    </LinearLayout>  
</LinearLayout>  